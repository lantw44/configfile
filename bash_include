case "$OSTYPE" in
	*openbsd*)
		alias safe_mv_verbose='safe_mv'
		alias safe_ln_verbose='safe_ln'
		safe_mv_verbose='mv'
		safe_ln_verbose='ln'
		;;
	*)
		alias safe_mv_verbose='safe_mv -v'
		alias safe_ln_verbose='safe_ln -v'
		safe_mv_verbose='mv -v'
		safe_ln_verbose='ln -v'
		;;
esac


# Aliases: Command Prompt

