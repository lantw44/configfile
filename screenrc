caption always "%{= ky}%H  %{= kc}%-Lw%{= br}%n%f %t%{= kc}%+Lw %=%{= g}%l"
termcapinfo xterm*|rxvt*|kterm*|Eterm* 'hs:ts=\E]0;:fs=\007:ds=\E]0;\007'

defscrollback 65536
hardstatus lastline
hardstatus string '%h%? users: %u%?'
ignorecase on
vbell off
vbellwait 0
zombie ^C^R

# The first window should be a login shell
deflogin on
shell -$SHELL
screen

# Other windows are non-login shells
shell $SHELL
deflogin off
